<div class="row-fluid">
	<div class="offset4 span4">
    <h2>Dashboards</h2>
	  <hr>
    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
      <% @dashboards.each do |dashboard| %>
      <tr>
        <td><%= link_to dashboard.name, dashboard %></td>
	      <td><%= link_to "Edit", edit_dashboard_url(dashboard) %></td>
      </tr>
      <% end %>
    </table>
    <%= button_to "New dashboard", new_dashboard_path, method: :get, :class => "btn btn-large btn-primary btn-flat" %>
    <br />
  </div>
</div>
