<h2>Snapshot</h2>
	<div class="bignums">
	<ul>
		 <div class="span3">
			<li>	
					<%= @dashboard.snapshot.visits %> <%= image_tag "uparrow.svg", :class => "arrows" %>
				<p>Visits</p>
			</li>
		</div>

		<div class="span3">
			<li>
		    <%= @dashboard.snapshot.pageviews %> <%= image_tag "uparrow.svg", :class => "arrows" %>
				<p>Views<p>
			</li>
		</div>

		<div class="span3">
			<li>
				<%= @dashboard.snapshot.visit_bounce_rate.to_f.round(2) %>% <%= image_tag "downarrow.svg", :class => "arrows" %>
				<p>Bounce Rate<p>
			</li>
		</div>

		<div class="span3">
			<li>
				<%= @dashboard.snapshot.visitors %> <%= image_tag "uparrow.svg", :class => "arrows" %>
				<p>Visitors<p>
			</li>
		</div>
	</ul>
</div>